{
  "imports": {
    "kysely": "npm:kysely",
    "sqlite": "jsr:@db/sqlite",
    "kysely-deno-sqlite": "https://deno.land/x/kysely_deno_sqlite@2.0.0/mod.ts"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --allow-ffi --unstable-ffi api/main.ts",
    "migrate": "deno run --allow-read --allow-write --allow-env --allow-ffi --unstable-ffi api/db/migrate.ts"
  },
  "fmt": {
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true
    }
  }
}
